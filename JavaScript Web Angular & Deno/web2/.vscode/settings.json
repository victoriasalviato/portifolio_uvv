{
    "deno.enable": true,
    "deno.importMap": "./import_map.json", // Caso você esteja usando um import map  // Se você precisar usar funções instáveis do Deno
    "editor.formatOnSave": true,  // Se quiser formatar o código automaticamente
    "deno.lint": true,
    "deno.format": true,
    "typescript.tsdk": "node_modules/typescript/lib",
    "deno.codeLens": true,
    "deno.codeLens.implementations": true,
    "deno.codeLens.references": true,
    "deno.codeLens.referencesAllFunctions": true,
    "deno.suggest.imports.hosts": {
        "https://deno.land": true
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.tabCompletion": "on",
    "editor.suggestOnTriggerCharacters": true,
    "editor.suggestSelection": "first",
    "editor.suggest.snippetsPreventQuickSuggestions": true,
    "editor.suggest.localityBonus": true,
    "files.associations": {
